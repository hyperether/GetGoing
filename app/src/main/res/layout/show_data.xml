<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="var"
            type="com.hyperether.getgoing.repository.room.entity.DbRoute" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_new">

        <ImageButton
            android:id="@+id/ib_sd_back_btn"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_light_back_icon" />

        <TextView
            android:id="@+id/tv_sd_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/mat_gray"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/ib_sd_back_btn"
            app:layout_constraintStart_toEndOf="@+id/ib_sd_back_btn"
            app:layout_constraintTop_toTopOf="@+id/ib_sd_back_btn"
            tools:text="Walking" />

        <ImageButton
            android:id="@+id/ib_sd_share_btn"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/com_facebook_share_button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_light_share_icon"/>

        <ImageView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintBottom_toTopOf="@+id/sd_chart_layout"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ib_sd_back_btn" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_light_goal_icon"
            app:layout_constraintStart_toEndOf="@id/progress"
            app:layout_constraintBottom_toTopOf="@id/progress"
            app:layout_constraintTop_toBottomOf="@id/progress"
            android:layout_marginStart="8dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sd_chart_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress">

            <include
                android:id="@+id/show_data_cds_info_layout"
                layout="@layout/show_data_cds_info"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/sd_chart_bg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/rounded_top_data_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_data_cds_info_layout" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageButton
                android:id="@+id/btn_toggle_map"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/toggle_map_button"
                app:layout_constraintEnd_toStartOf="@+id/recyclerList"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/recyclerList"
                app:layout_constraintTop_toTopOf="@id/sd_chart_bg"
                app:srcCompat="@drawable/ic_gray_angle_up_icon" />

            <View
                android:id="@+id/sd_dashed_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/dashed_line"
                android:layerType="software"
                app:layout_constraintBottom_toBottomOf="@+id/sd_chart_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sd_chart_bg"
                app:layout_constraintVertical_bias="0.286" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="@string/goal"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/sd_dashed_line"
                app:layout_constraintEnd_toStartOf="@id/sd_dashed_line"
                app:layout_constraintTop_toBottomOf="@+id/sd_dashed_line" />

            <TextView
                goal="@{var.goal}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/sd_dashed_line"
                app:layout_constraintStart_toEndOf="@id/sd_dashed_line"
                app:layout_constraintTop_toBottomOf="@+id/sd_dashed_line" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sd_map_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sd_chart_layout">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <fragment
                android:id="@+id/sd_map_view"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

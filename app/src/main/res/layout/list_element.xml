<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/walk_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/statistic_walk"/>

    <LinearLayout
        android:id="@+id/statistic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/walk_layout"
        android:layout_toRightOf="@+id/walk_layout"
        android:orientation="vertical"
        android:paddingLeft="@dimen/element_padding"
        android:paddingRight="@dimen/element_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/date_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="@color/list_element_font"
                android:textSize="@dimen/element_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/date_padding"
                android:layout_marginStart="@dimen/date_padding"
                android:text="@string/time"
                android:textColor="@color/list_element_font"
                android:textSize="@dimen/element_text_size"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/date_margin"
            android:text="Energy: 100.0"
            android:textSize="@dimen/element_energy_text_size"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/element_padding"
        android:src="@drawable/button_reset_statistic"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/walk_layout"
        android:background="@color/black"/>
</RelativeLayout>
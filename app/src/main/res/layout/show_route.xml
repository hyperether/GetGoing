<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/whole_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/com_facebook_button_border_color_focused"
              android:descendantFocusability="beforeDescendants"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              android:weightSum="1">

    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/com_facebook_blue"
        android:text="Share on Facebook"
        android:textColor="@color/settings_edit_gradient_start"/>

    <RelativeLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_layout_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/com_facebook_button_border_color_focused">

            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/route_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewTime"
                    android:layout_width="@dimen/route_img_size"
                    android:layout_height="@dimen/route_img_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/route_margin"
                    android:layout_marginStart="@dimen/route_margin"
                    android:contentDescription="@string/descImageViewEmpty"
                    android:src="@drawable/clock"/>

                <EditText
                    android:id="@+id/showTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/route_margin"
                    android:layout_marginStart="@dimen/route_margin"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calories_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_layout"
                android:layout_marginTop="@dimen/route_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCalories"
                    android:layout_width="@dimen/route_img_size"
                    android:layout_height="@dimen/route_img_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/route_margin"
                    android:layout_marginStart="@dimen/route_margin"
                    android:contentDescription="@string/descImageViewEmpty"
                    android:src="@drawable/fire"/>

                <EditText
                    android:id="@+id/showCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/route_margin"
                    android:layout_marginStart="@dimen/route_margin"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/distance_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories_layout"
                android:layout_marginTop="@dimen/route_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewDistance"
                    android:layout_width="@dimen/route_img_size"
                    android:layout_height="@dimen/route_img_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/route_margin"
                    android:layout_marginStart="@dimen/route_margin"
                    android:contentDescription="@string/descImageViewEmpty"
                    android:src="@drawable/road"/>

                <EditText
                    android:id="@+id/showDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/route_margin"
                    android:layout_marginStart="@dimen/route_margin"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/distance_layout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/time_layout"
                android:layout_toEndOf="@+id/time_layout"
                android:layout_toRightOf="@+id/time_layout"
                android:src="@drawable/ic_launher"/>
        </RelativeLayout>

        <fragment
            android:id="@+id/show_map_page"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_layout_data"
            android:background="@color/com_facebook_button_border_color_focused"/>
    </RelativeLayout>
</LinearLayout>
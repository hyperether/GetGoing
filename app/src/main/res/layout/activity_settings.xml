<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/spinner_horizontal_margin_port"
    android:layout_marginTop="@dimen/spinner_horizontal_margin_port">


    <RelativeLayout
        android:id="@+id/metric_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/settings_layout_margin">

        <ImageView
            android:id="@+id/measure_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/measure_image"
            android:src="@drawable/measure" />

        <TextView
            android:id="@+id/measure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/settings_txt_margin_left"
            android:layout_marginStart="@dimen/settings_txt_margin_left"
            android:layout_toEndOf="@+id/measure_image"
            android:layout_toRightOf="@+id/measure_image"
            android:text="@string/measure_image"
            android:textColor="@color/settings_font"
            android:textSize="@dimen/settings_text_size" />

        <Spinner
            android:id="@+id/metric_spinner"
            android:layout_width="@dimen/settings_spinner_width"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:prompt="@string/metric_spinner" />
    </RelativeLayout>

    <View
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/metric_layout"
        android:background="@color/settings_view_first_line" />

    <View
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/first_line"
        android:background="@color/settings_view_second_line" />

    <RelativeLayout
        android:id="@+id/weight_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_line"
        android:layout_margin="@dimen/settings_layout_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weight_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/teg_image"
            android:src="@drawable/beam_scale" />

        <TextView
            android:id="@+id/weight_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/settings_txt_margin_left"
            android:layout_marginStart="@dimen/settings_txt_margin_left"
            android:layout_toEndOf="@+id/weight_image"
            android:layout_toRightOf="@+id/weight_image"
            android:text="@string/teg_image"
            android:textColor="@color/settings_font"
            android:textSize="@dimen/settings_text_size" />

        <EditText
            android:id="@+id/edit_weight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_edit_margin_right"
            android:layout_marginRight="@dimen/settings_edit_margin_right"
            android:layout_toLeftOf="@+id/weight_picker_up"
            android:layout_toStartOf="@+id/weight_picker_up"
            android:background="@drawable/selector_custom_border_edit_text"
            android:inputType="number" />

        <ImageButton
            android:id="@+id/weight_picker_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_arrow_margin_right"
            android:layout_marginRight="@dimen/settings_arrow_margin_right"
            android:layout_toLeftOf="@+id/weight_picker_down"
            android:layout_toStartOf="@+id/weight_picker_down"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings_img_up"
            android:src="@drawable/selector_arrow_up" />

        <ImageButton
            android:id="@+id/weight_picker_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings_img_down"
            android:src="@drawable/selector_arrow_down" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/age_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_layout"
        android:layout_margin="@dimen/settings_layout_margin">

        <ImageView
            android:id="@+id/age_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/age_image"
            android:src="@drawable/sandglass" />

        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/settings_txt_age_margin_left"
            android:layout_marginStart="@dimen/settings_txt_age_margin_left"
            android:layout_toEndOf="@+id/age_image"
            android:layout_toRightOf="@+id/age_image"
            android:text="@string/age_image"
            android:textColor="@color/settings_font"
            android:textSize="@dimen/settings_text_size" />

        <EditText
            android:id="@+id/edit_age"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_edit_margin_right"
            android:layout_marginRight="@dimen/settings_edit_margin_right"
            android:layout_toLeftOf="@+id/age_picker_up"
            android:layout_toStartOf="@+id/age_picker_up"
            android:background="@drawable/selector_custom_border_edit_text"
            android:inputType="number" />

        <ImageButton
            android:id="@+id/age_picker_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_arrow_margin_right"
            android:layout_marginRight="@dimen/settings_arrow_margin_right"
            android:layout_toLeftOf="@+id/age_picker_down"
            android:layout_toStartOf="@+id/age_picker_down"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings_img_up"
            android:src="@drawable/selector_arrow_up" />

        <ImageButton
            android:id="@+id/age_picker_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings_img_down"
            android:src="@drawable/selector_arrow_down" />
    </RelativeLayout>

    <View
        android:id="@+id/third_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/age_layout"
        android:background="@color/settings_view_first_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/third_line"
        android:background="@color/settings_view_second_line" />

    <Button
        android:id="@+id/buttonConfirmSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@color/settings_btn_accept_bgd"
        android:paddingBottom="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="20dp"
        android:text="@string/button_accept"
        android:textColor="@color/settings_btn_accept_font"
        android:textSize="@dimen/accept_button_size" />
</RelativeLayout>
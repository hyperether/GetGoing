<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/start_final_pritisnuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/start_pressed"
            android:paddingBottom="50dp"
           />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/save_pressed"
            android:drawableStart="@drawable/save_pressed"
            android:paddingBottom="50dp"/>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/reset_pressed"
            />
    </LinearLayout>

  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
       >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/clock_image"
            android:src="@drawable/clock"
            android:paddingBottom="15dp"
            android:paddingTop="70dp"
                      />

        <Chronometer
            android:id="@+id/time_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="00:00:00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:paddingTop="70dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/speed_image"
            android:src="@drawable/speed"
            android:paddingBottom="15dp"/>

        <Chronometer
            android:id="@+id/speed_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="0:00m/s"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/fire_image"
            android:src="@drawable/fire"
            android:paddingBottom="15dp"/>

        <Chronometer
            android:id="@+id/kcal_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="0:00kcal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avg_speed_nobg_full_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/avg_speed_image"
            android:src="@drawable/avg_speed_nobg_full"
            android:paddingBottom="15dp"/>

        <Chronometer
            android:id="@+id/avg_speed_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="0:00m/s"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/road_image"
            android:src="@drawable/road" />

        <Chronometer
            android:id="@+id/road_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="0:00m"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/road2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/road_image"
            android:src="@drawable/road"
            android:visibility="invisible"
            />
        <Chronometer
            android:id="@+id/road2_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:format="0:00m/s"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_final_pritisnuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/start_pressed"
            android:paddingTop="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/save_pressed"
            android:drawableStart="@drawable/save_pressed"
            android:paddingTop="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/reset_pressed"
            android:paddingBottom="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/clock_image"
                android:paddingBottom="5dp"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/clock" />

            <Chronometer
                android:id="@+id/time_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="00:00:00"
                android:paddingTop="21dp"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/road"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/road_image"
                android:paddingBottom="5dp"
                android:src="@drawable/road" />

            <Chronometer
                android:id="@+id/road_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="0:00m"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/fire_image"
                android:paddingBottom="5dp"
                android:src="@drawable/fire" />

            <Chronometer
                android:id="@+id/kcal_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="0:00kcal"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/speed_image"
                android:paddingBottom="5dp"
                android:src="@drawable/speed" />

            <Chronometer
                android:id="@+id/speed_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="0:00m/s"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avg_speed_nobg_full_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/avg_speed_image"
                android:paddingBottom="5dp"
                android:src="@drawable/avg_speed_nobg_full" />

            <Chronometer
                android:id="@+id/avg_speed_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="0:00m/s"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/road2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/road_image"
                android:paddingBottom="5dp"
                android:src="@drawable/road"
                android:visibility="invisible" />

            <Chronometer
                android:id="@+id/road2_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="0:00m/s"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
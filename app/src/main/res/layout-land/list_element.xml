<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/walk_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/element_padding_land"
        android:contentDescription="@string/app_name"
        android:paddingRight="@dimen/element_padding_land"
        android:src="@drawable/statistic_walk" />

    <LinearLayout
        android:id="@+id/statistic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/walk_layout"
        android:layout_toRightOf="@+id/walk_layout"
        android:orientation="vertical"
        android:paddingRight="@dimen/element_padding_land">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/date_padding_land"
                android:text="@string/date"
                android:textSize="@dimen/element_text_size_land"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEnergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textSize="@dimen/element_text_size_land"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy: 100.0"
            android:textSize="@dimen/element_text_size_land"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/element_padding_land"
        android:layout_toEndOf="@+id/statistic_layout"
        android:layout_toRightOf="@+id/statistic_layout"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reset" />
</RelativeLayout>

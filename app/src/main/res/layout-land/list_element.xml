
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/walk_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/element_padding"
        android:layout_marginStart="@dimen/element_padding"
        android:layout_marginTop="@dimen/element_padding"
        android:contentDescription="@string/app_name"
        android:paddingEnd="@dimen/element_padding"
        android:paddingRight="@dimen/element_padding"
        android:src="@drawable/walk_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/walk_layout"
        android:layout_toRightOf="@+id/walk_layout"
        android:orientation="vertical"
        android:id="@+id/statistic_layout"
        android:paddingRight="@dimen/element_padding"
        android:paddingEnd="@dimen/element_padding"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/date_padding"
                android:paddingRight="@dimen/date_padding"
                android:text="@string/date"
                android:textSize="@dimen/element_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textSize="@dimen/element_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/energy"
            android:textSize="@dimen/element_text_size"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/statistic_layout"
        android:layout_toEndOf="@+id/statistic_layout"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/element_padding"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reset" />


</RelativeLayout>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hyperether.getgoing">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <!-- External storage for caching. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- My Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- Maps API needs OpenGL ES 2.0. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
    <!-- End of copy. -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_logo"
        android:theme="@style/AppTheme">
        <uses-library
            android:name="com.google.android.maps"
            android:required="true"/>

        <activity
            android:name=".activity.GetGoingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:icon="@mipmap/ic_logo"
            android:label=""
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activity.ShowLocationActivity"
            android:icon="@mipmap/ic_logo"
            android:theme="@style/NoActionBar"
            android:label=""
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ShowDataActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:icon="@mipmap/ic_logo"
            android:label=""/>
        <activity
            android:name=".activity.ShowRouteActivity"
            android:icon="@mipmap/ic_logo"
            android:theme="@style/NoActionBar"
            android:label=""/>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDpq_pRHu1SyXMBgyhikC3vPRtunvPPukI"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="81fce5a0d04d64cd1c08c99cef619efaca994e50"/>
    </application>
</manifest>
